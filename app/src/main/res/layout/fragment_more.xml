<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="lang"
            type="String" />
        <variable
            name="model"
            type="com.apps.albayt.model.UserModel" />
        <import type="android.view.View"/>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <include
                android:id="@+id/layoutProfile"
                layout="@layout/profile_layout"
                android:visibility='@{model!=null?View.VISIBLE:View.GONE,default=gone}'

                />

            <include
                android:id="@+id/layoutLogin"
                layout="@layout/profile_login_layout"
                android:visibility='@{model==null?View.VISIBLE:View.GONE,default=gone}'
                />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_bold"
            android:text="@string/follow_us"
            android:textColor="@color/black"
            android:textSize="18sp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageFacebook"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/facebook"

                />

            <androidx.legacy.widget.Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/imageInstagram"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/instagram"

                />

            <androidx.legacy.widget.Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/imageTwitter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/twitter"

                />

            <androidx.legacy.widget.Space
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/imageSnapChat"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/snapchat"

                />
        </LinearLayout>

    </LinearLayout>




</layout>



