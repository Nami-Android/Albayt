<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="lang"
            type="String" />

        <variable
            name="model"
            type="com.apps.albayt.model.ProductModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rounded_white_stroke_gray12"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                image="@{model.image}" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_bold"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="12dp"
                    android:text='@{model.title}'
                    android:textColor="@color/black2"

                    android:textSize="14sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/fl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:background="@drawable/rounded_white_stroke_color3"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageDecrease"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_minus"
                            app:tint="@color/color3"
                            android:visibility="@{model.amount>1?View.VISIBLE:View.INVISIBLE}"

                            />

                        <TextView
                            android:id="@+id/tvCounter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_bold"
                            android:gravity="center"
                            android:text="@{String.valueOf(model.amount)}"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />


                        <ImageView
                            android:id="@+id/imageIncrease"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:src="@drawable/ic_add"
                            app:tint="@color/color3" />


                    </LinearLayout>


                </FrameLayout>

                <ImageView
                    android:id="@+id/imgDelete"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/grey8" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</layout>