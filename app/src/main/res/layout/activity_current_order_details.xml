<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.apps.albayt.model.OrderModel" />
        <variable
            name="lang"
            type="String" />

        <import type="android.view.View"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey9"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:id="@+id/flCartItem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="36dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/rounded_grey4_stroke_color3"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="36dp"
                                    android:layout_marginEnd="16dp"
                                    android:orientation="horizontal"

                                    >

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/font_regular"
                                            android:text="@string/order_number"
                                            android:textColor="@color/grey8"
                                            android:textSize="12sp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical"
                                            >

                                            <ImageView
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:layout_gravity="center_vertical"
                                                android:src="@drawable/ic_order2"
                                                android:padding="3dp"
                                                />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginStart="8dp"
                                                android:layout_marginEnd="8dp"
                                                android:fontFamily="@font/font_regular"
                                                android:text='@{"#"+model.id}'
                                                android:textColor="@color/black2"
                                                android:textSize="14sp"

                                                />


                                        </LinearLayout>

                                    </LinearLayout>


                                </LinearLayout>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:fontFamily="@font/font_regular"
                                    android:text="@string/order_time"
                                    android:textColor="@color/grey8"
                                    android:textSize="12sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="16dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_date"
                                        android:padding="3dp"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="8dp"
                                        android:fontFamily="@font/font_regular"
                                        android:textColor="@color/black2"
                                        android:textSize="14sp"
                                        android:text="@{model.order_date}"
                                        />
                                    <androidx.legacy.widget.Space
                                        android:layout_width="16dp"
                                        android:layout_height="0dp"
                                        />
                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_time"
                                        android:padding="3dp"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="4dp"
                                        android:fontFamily="@font/font_regular"
                                        android:text="@{model.order_time}"
                                        android:textColor="@color/black2"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginTop="24dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginBottom="14dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="47dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/rounded_primary"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:visibility='@{model.status.equals("preparing")?View.GONE:model.status.equals("on_way")?View.GONE:model.status.equals("delivered")?View.GONE:View.VISIBLE}'
                                        >

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_close"
                                            app:tint="@color/white" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="8dp"
                                            android:fontFamily="@font/font_regular"
                                            android:text="@string/cancel"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="47dp"
                                        android:layout_marginStart="17dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/rounded_grey8"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:visibility="gone"
                                        >

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:src="@drawable/ic_edit3" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="8dp"
                                            android:fontFamily="@font/font_regular"
                                            android:text="@string/edit"
                                            android:textColor="@color/white"
                                            android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/rounded_color1_stroke_color3"
                            android:padding="7dp"
                            app:layout_constraintBottom_toTopOf="@+id/flCartItem"
                            app:layout_constraintEnd_toEndOf="@+id/flCartItem"
                            app:layout_constraintStart_toStartOf="@+id/flCartItem"
                            app:layout_constraintTop_toTopOf="@+id/flCartItem">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    image="@{model.supplier.logo}"

                                    />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_regular"
                                    android:text='@{model.supplier.full_name}'
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </FrameLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/llNoOffer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:gravity="center"
                            android:layout_gravity="center"
                            >

                            <pl.droidsonroids.gif.GifImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="30dp"
                                android:src="@drawable/gif_current"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/font_bold"
                                android:text="@string/collecting_packages_from_suppliers"
                                android:textColor="@color/black2"
                                android:textSize="18sp"
                                android:gravity="center"
                                />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp" />
                    </FrameLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    </LinearLayout>

</layout>